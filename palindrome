public class Solution {
    public boolean isPalindrome(int x) {
        int digit=0;
        int res=0;
        int i=x;
        Boolean bl=false;
        if(i<0){
            bl=false;
        }
        else{
            while(i>0){
                digit=i%10;
                i=i/10;
                res=res*10+digit;
                //System.out.println(res);
            }
            if(res==x){
                bl=true;
            }
        }
        return bl;

    }
}
